extends ../layout

block content
    div.row
      h1.
        Video
    div.row
        div(class="medium-12 medium-offset-3 columns")
            table(width="50%")
                thead
                    tr  
                      th Name 
                      th Path
                      th Genre
                tbody
                    tr
                      td 
                        = video.name
                      td 
                        = video.path
                      td
                        = video.genre
        div.row
          iframe( autobuffer width="420" height="315" frameborder="0" src='/'+video.path scrolling='no')
    div.row
      a(href='/videos' class='small button') Back